{
  "compilerOptions": {
    "lib": ["es2018", "esnext"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
